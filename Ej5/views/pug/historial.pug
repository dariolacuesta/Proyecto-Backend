extends ./layout
block historial
    h2(style="text-align:center;")="Lista de Productos"
    div(class="container mt-3")
        div(class="table-responsive")
            table(class="table table-dark")
                tr
                    th="Producto"
                    th="Precio"
                    th="Imagen"
                
                #productos 
                    if productos
                        each val in productos
                            tr
                                td=val.producto
                                td=val.precio
                                td 
                                    img(src=val.imagen width='50px' height='50px')
        div(class="container")
                    div(class='row')
                        a(class='btn btn-success col-6 offset-3' href='/pug') Historial 